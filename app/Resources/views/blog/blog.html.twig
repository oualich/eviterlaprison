{% extends 'base.html.twig' %}

{% block body %}
<section>
    <div class="blog__header">
        <h1>Les derniers articles</h1>

        {% if is_granted('ROLE_USER')  %}
            <a href="/blog/create"><button class="blog__editBtn">Editer les articles</button></a>
        {% endif %}
    </div>
    <div class="card__container">
        {% for blogpostitem in blogpost %}
        <div class="card text-center">
            <div class="card-header categ">
                {{blogpostitem.category}}
            </div>
            <div class="card-block">
                <h4 class="card-title">{{blogpostitem.title}}</h4>
                <p class="card-text">{{blogpostitem.body}}</p>
            </div>
        </div>  
        {% endfor %}
    </div>
</section>
{% endblock %}

